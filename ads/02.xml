<?xml version="1.0" encoding="UTF-8"?>
<ad>
  <content>
    <![CDATA[
      <div class="ad-box">
        <style>
          .ad-box {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            position: relative;
            overflow: hidden;
            opacity: 0;
            animation: fadeIn 1s ease-in forwards;
          }

          .freebitcoin-ad {
            display: inline-block;
            padding: 15px 30px;
            font-size: 18px;
            font-weight: bold;
            border: none;
            border-radius: 50px;
            text-decoration: none;
            cursor: pointer;
            position: relative;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            animation: pulse 2s infinite;
          }

          .freebitcoin-ad:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
          }

          .tooltip {
            position: absolute;
            top: -40px;
            left: 50%;
            transform: translateX(-50%);
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 12px;
            opacity: 0;
            transition: opacity 0.3s ease;
            pointer-events: none;
          }

          .freebitcoin-ad:hover .tooltip {
            opacity: 1;
          }

          @keyframes fadeIn {
            0% { opacity: 0; transform: translateY(20px); }
            100% { opacity: 1; transform: translateY(0); }
          }

          @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
          }

          @media (max-width: 480px) {
            .freebitcoin-ad {
              font-size: 16px;
              padding: 12px 20px;
            }
          }

          .theme-01 .ad-box {
            background: linear-gradient(135deg, #e0e0e0, #f0f0f0);
          }
          .theme-01 .freebitcoin-ad {
            font-family: 'Courier New', monospace;
            background: linear-gradient(45deg, #333, #666);
            color: #222;
          }
          .theme-01 .tooltip {
            background: #333;
            color: #fff;
          }
          .theme-01.dark-mode .ad-box {
            background: linear-gradient(135deg, #222, #444);
          }
          .theme-01.dark-mode .freebitcoin-ad {
            background: linear-gradient(45deg, #aaa, #ddd);
            color: #fff;
          }
          .theme-01.dark-mode .tooltip {
            background: #222;
            color: #ccc;
          }

          .theme-02 .ad-box {
            background: linear-gradient(135deg, #001100, #003300);
          }
          .theme-02 .freebitcoin-ad {
            font-family: 'Courier New', monospace;
            background: linear-gradient(45deg, #00ff00, #00cc00);
            color: #000;
          }
          .theme-02 .tooltip {
            background: #001100;
            color: #00ff00;
          }

          .theme-03 .ad-box {
            background: linear-gradient(135deg, #1a002a, #2a004a);
          }
          .theme-03 .freebitcoin-ad {
            font-family: 'Orbitron', sans-serif;
            background: linear-gradient(45deg, #ff00ff, #00ffff);
            color: #0f0f1a;
          }
          .theme-03 .tooltip {
            background: #0f0f1a;
            color: #ff00ff;
          }

          .theme-04 .ad-box {
            background: linear-gradient(135deg, #e6e0d4, #fdf6e3);
          }
          .theme-04 .freebitcoin-ad {
            font-family: 'Courier New', monospace;
            background: linear-gradient(45deg, #004400, #006600);
            color: #fff;
          }
          .theme-04 .tooltip {
            background: #e6e0d4;
            color: #004400;
          }
        </style>

        <script>
          const stylesheet = document.querySelector('link[rel=stylesheet]').href;
          const adBox = document.querySelector('.ad-box');
          if (stylesheet.includes('css/01.css')) {
            adBox.classList.add('theme-01');
            if (document.body.classList.contains('dark-mode')) {
              adBox.classList.add('dark-mode');
            }
          } else if (stylesheet.includes('css/02.css')) {
            adBox.classList.add('theme-02');
          } else if (stylesheet.includes('css/03.css')) {
            adBox.classList.add('theme-03');
          } else if (stylesheet.includes('css/04.css')) {
            adBox.classList.add('theme-04');
          }
        </script>

        <a href="https://freebitco.in/?r=your_referral_id" class="freebitcoin-ad" target="_blank" rel="noopener noreferrer">
          Win Bitcoin with FreeBitco.in!
          <span class="tooltip">Start Winning Today!</span>
        </a>

        <script>
          document.querySelector('.freebitcoin-ad').addEventListener('click', function() {
            console.log('FreeBitcoin ad clicked!');
          });
        </script>
      </div>
    ]]>
  </content>
</ad>
